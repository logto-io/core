{
  "compilerOptions": {
    "target": "es2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "lib"
  },
  "include": [
    "src"
  ]
}
