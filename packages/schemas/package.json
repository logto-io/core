{
  "name": "@logto/schemas",
  "version": "0.1.0",
  "main": "lib/index.js",
  "repository": "https://github.com/logto-io/schemas",
  "author": "Logto",
  "license": "MPL-2.0",
  "files": [
    "lib"
  ],
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "precommit": "lint-staged",
    "generate": "rm -rf src/db-entries && ts-node src/gen/index.ts && eslint \"src/db-entries/**\" --fix",
    "build": "pnpm generate && rm -rf lib/ && tsc --p tsconfig.build.json",
    "lint": "eslint --ext .ts src",
    "prepack": "pnpm build"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "devDependencies": {
    "@silverhand/eslint-config": "^0.9.4",
    "@silverhand/essentials": "^1.1.0",
    "@silverhand/ts-config": "^0.9.4",
    "@types/lodash.uniq": "^4.5.6",
    "@types/node": "14",
    "@types/pluralize": "^0.0.29",
    "camelcase": "^6.2.0",
    "eslint": "^8.10.0",
    "lint-staged": "^11.1.1",
    "lodash.uniq": "^4.5.0",
    "pluralize": "^8.0.0",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.5"
  },
  "eslintConfig": {
    "extends": "@silverhand",
    "rules": {
      "@typescript-eslint/ban-types": "off"
    }
  },
  "prettier": "@silverhand/eslint-config/.prettierrc",
  "dependencies": {
    "@logto/phrases": "^0.1.0",
    "zod": "^3.8.1"
  }
}
