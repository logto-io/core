{
  "name": "@logto/core",
  "version": "0.1.0",
  "description": "The open source identity solution.",
  "main": "build/index.js",
  "author": "Logto",
  "license": "MPL-2.0",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "precommit": "lint-staged",
    "copyfiles": "copyfiles -u 1 src/**/*.md build",
    "build": "rm -rf build/ && tsc -p tsconfig.build.json && pnpm run copyfiles",
    "lint": "eslint --ext .ts src",
    "lint:report": "pnpm lint -- --format json --output-file report.json",
    "dev": "rm -rf build/ && pnpm run copyfiles && tsc-watch -p tsconfig.build.json --preserveWatchOutput --onSuccess \"node ./build/index.js\"",
    "start": "NODE_ENV=production node build/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage --silent",
    "test:report": "codecov -F core"
  },
  "dependencies": {
    "@logto/phrases": "^0.1.0",
    "@logto/schemas": "^0.1.0",
    "@silverhand/essentials": "1.1.7",
    "dayjs": "1.11.1",
    "decamelize": "5.0.1",
    "dotenv": "10.0.0",
    "got": "11.8.3",
    "i18next": "20.6.1",
    "iconv-lite": "0.6.3",
    "inquirer": "8.2.2",
    "jose": "3.20.3",
    "koa": "2.13.4",
    "koa-body": "4.2.0",
    "koa-logger": "3.2.1",
    "koa-mount": "4.0.0",
    "koa-proxies": "0.12.2",
    "koa-router": "10.1.1",
    "koa-static": "5.0.0",
    "lodash.pick": "4.4.0",
    "module-alias": "2.2.2",
    "nanoid": "3.3.3",
    "oidc-provider": "7.11.0",
    "p-retry": "4.6.1",
    "query-string": "7.1.1",
    "slonik": "23.9.0",
    "slonik-interceptor-preset": "1.2.10",
    "snakecase-keys": "5.4.1",
    "zod": "3.14.4"
  },
  "devDependencies": {
    "@shopify/jest-koa-mocks": "3.1.5",
    "@silverhand/eslint-config": "0.10.2",
    "@silverhand/ts-config": "0.10.2",
    "@types/inquirer": "8.2.1",
    "@types/jest": "27.4.1",
    "@types/koa": "2.13.4",
    "@types/koa-logger": "3.1.2",
    "@types/koa-mount": "4.0.1",
    "@types/koa-static": "4.0.2",
    "@types/lodash.pick": "4.4.7",
    "@types/node": "16.11.27",
    "@types/oidc-provider": "7.11.0",
    "@types/supertest": "2.0.12",
    "copyfiles": "2.4.1",
    "eslint": "8.13.0",
    "jest": "27.5.1",
    "jest-matcher-specific-error": "1.0.0",
    "lint-staged": "11.2.6",
    "nock": "13.2.4",
    "openapi-types": "9.3.1",
    "prettier": "2.6.2",
    "snake-case": "3.0.4",
    "supertest": "6.2.2",
    "ts-jest": "27.1.4",
    "tsc-watch": "4.6.2",
    "typescript": "4.6.3"
  },
  "engines": {
    "node": ">=14.15.0"
  },
  "_moduleAliases": {
    "@": "./build"
  },
  "eslintConfig": {
    "extends": "@silverhand"
  },
  "prettier": "@silverhand/eslint-config/.prettierrc"
}
