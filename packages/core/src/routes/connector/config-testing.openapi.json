{
  "tags": [
    {
      "name": "Config testing",
      "description": "Test passwordless connector sending functionality."
    }
  ],
  "paths": {
    "/api/connectors/:factoryId/test": {
      "post": {
        "summary": "Test passwordless connector sending functionality.",
        "description": "Test passwordless connector sending functionality, with destination (email address or phone number) and connector configuration.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "phone": {
                    "type": "string",
                    "description": "Phone number to send test message to."
                  },
                  "email": {
                    "type": "string",
                    "description": "Email address to send test message to."
                  },
                  "config": {
                    "type": "object",
                    "description": "Connector configuration for testing."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Test message sent successfully."
          },
          "400": {
            "description": "Invalid request body (e.g. wrong phone number, email or config)."
          },
          "404": {
            "description": "Connector not found."
          }
        }
      }
    }
  }
}
