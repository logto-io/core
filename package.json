    "dev": "lerna run --stream prepack && lerna --scope=@logto/{core,ui} exec -- pnpm dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/types": "^13.1.0",
    "husky": "^7.0.1",
    "lerna": "^4.0.0",
    "typescript": "^4.5.5"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/module-alias"
    ]
  },
  "engines": {
    "node": ">=14.15.0",
    "pnpm": ">=6"
  }
}
